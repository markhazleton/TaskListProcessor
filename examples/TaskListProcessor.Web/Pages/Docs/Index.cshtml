@page
@model TaskListProcessor.Web.Pages.Docs.IndexModel
@{
    ViewData["Title"] = "Documentation Browser";
    ViewData["Description"] = "Browse and search the complete TaskListProcessor documentation";
}

<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="bi bi-book me-3"></i>Documentation Browser
                </h1>
                <p class="lead mb-4">
                    Explore @Model.ViewModel.AllDocuments.Count comprehensive guides, tutorials, and references
                </p>
                
                <!-- Search Box -->
                <div class="search-box mx-auto" style="max-width: 600px;">
                    <form asp-page="/Docs/Search" method="get" class="position-relative">
                        <input type="text" name="q" class="form-control form-control-lg rounded-pill ps-5" 
                               placeholder="Search documentation..." aria-label="Search">
                        <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-4 text-muted"></i>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <!-- Sidebar: Document Tree -->
            <div class="col-lg-3">
                <div class="card border-0 shadow-sm sticky-top" style="top: 1rem;">
                    <div class="card-header bg-white border-bottom">
                        <h6 class="mb-0">
                            <i class="bi bi-folder-tree me-2"></i>Documentation
                        </h6>
                    </div>
                    <div class="card-body p-0" style="max-height: 80vh; overflow-y: auto;">
                        <div class="list-group list-group-flush">
                            @foreach (var node in Model.ViewModel.DocumentTree)
                            {
                                <partial name="_DocumentTreeNode" model="node" />
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content Area -->
            <div class="col-lg-9">
                
                <!-- Progress Stats -->
                <div class="row g-4 mb-4">
                    <div class="col-md-3">
                        <div class="card text-center border-0 shadow-sm h-100">
                            <div class="card-body">
                                <i class="bi bi-file-text fs-1 text-primary"></i>
                                <h3 class="mt-2 mb-0">@Model.ViewModel.AllDocuments.Count</h3>
                                <small class="text-muted">Total Documents</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center border-0 shadow-sm h-100">
                            <div class="card-body">
                                <i class="bi bi-journal-code fs-1 text-success"></i>
                                <h3 class="mt-2 mb-0">@Model.ViewModel.Progress.TotalTutorials</h3>
                                <small class="text-muted">Tutorials</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center border-0 shadow-sm h-100">
                            <div class="card-body">
                                <i class="bi bi-check-circle fs-1 text-info"></i>
                                <h3 class="mt-2 mb-0">@Model.ViewModel.Progress.CompletedTutorials</h3>
                                <small class="text-muted">Completed</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center border-0 shadow-sm h-100">
                            <div class="card-body">
                                <div class="progress mb-2" style="height: 30px;">
                                    <div class="progress-bar bg-success" role="progressbar" 
                                         style="width: @Model.ViewModel.Progress.CompletionPercentage%"
                                         aria-valuenow="@Model.ViewModel.Progress.CompletionPercentage" 
                                         aria-valuemin="0" aria-valuemax="100">
                                        @Model.ViewModel.Progress.CompletionPercentage.ToString("F0")%
                                    </div>
                                </div>
                                <small class="text-muted">Progress</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Learning Path Progress -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">
                            <i class="bi bi-bar-chart me-2"></i>Learning Path Progress
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <h6 class="text-success">
                                    <i class="bi bi-1-circle me-2"></i>Beginner
                                </h6>
                                <div class="progress mb-2" style="height: 25px;">
                                    <div class="progress-bar bg-success" role="progressbar" 
                                         style="width: @(Model.ViewModel.Progress.BeginnerTotal > 0 ? (double)Model.ViewModel.Progress.BeginnerCompleted / Model.ViewModel.Progress.BeginnerTotal * 100 : 0)%">
                                        @Model.ViewModel.Progress.BeginnerCompleted/@Model.ViewModel.Progress.BeginnerTotal
                                    </div>
                                </div>
                                <small class="text-muted">All beginner tutorials complete!</small>
                            </div>
                            <div class="col-md-4">
                                <h6 class="text-warning">
                                    <i class="bi bi-2-circle me-2"></i>Intermediate
                                </h6>
                                <div class="progress mb-2" style="height: 25px;">
                                    <div class="progress-bar bg-warning" role="progressbar" style="width: 0%">
                                        @Model.ViewModel.Progress.IntermediateCompleted/@Model.ViewModel.Progress.IntermediateTotal
                                    </div>
                                </div>
                                <small class="text-muted">Coming soon!</small>
                            </div>
                            <div class="col-md-4">
                                <h6 class="text-danger">
                                    <i class="bi bi-3-circle me-2"></i>Advanced
                                </h6>
                                <div class="progress mb-2" style="height: 25px;">
                                    <div class="progress-bar bg-danger" role="progressbar" style="width: 0%">
                                        @Model.ViewModel.Progress.AdvancedCompleted/@Model.ViewModel.Progress.AdvancedTotal
                                    </div>
                                </div>
                                <small class="text-muted">Coming soon!</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Featured Documents -->
                @if (Model.ViewModel.FeaturedDocuments.Any())
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">
                                <i class="bi bi-star me-2"></i>Featured Documents
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                @foreach (var doc in Model.ViewModel.FeaturedDocuments)
                                {
                                    <div class="col-md-6">
                                        <a href="/Docs/@doc.UrlPath" class="text-decoration-none">
                                            <div class="card border h-100 hover-shadow">
                                                <div class="card-body">
                                                    <h6 class="card-title">
                                                        <i class="bi @(doc.IsTutorial ? "bi-journal-code" : "bi-file-text") me-2 text-primary"></i>
                                                        @doc.Title
                                                    </h6>
                                                    @if (!string.IsNullOrEmpty(doc.Description))
                                                    {
                                                        <p class="card-text text-muted small mb-2">@doc.Description</p>
                                                    }
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <small class="text-muted">
                                                            <i class="bi bi-clock me-1"></i>@doc.ReadingTimeMinutes min read
                                                        </small>
                                                        <span class="badge bg-primary">@doc.Category</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }

                <!-- Recent Documents -->
                @if (Model.ViewModel.RecentDocuments.Any())
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">
                                <i class="bi bi-clock-history me-2"></i>Recently Updated
                            </h5>
                        </div>
                        <div class="list-group list-group-flush">
                            @foreach (var doc in Model.ViewModel.RecentDocuments)
                            {
                                <a href="/Docs/@doc.UrlPath" class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between align-items-start">
                                        <div>
                                            <h6 class="mb-1">
                                                <i class="bi @(doc.IsTutorial ? "bi-journal-code" : "bi-file-text") me-2"></i>
                                                @doc.Title
                                            </h6>
                                            <small class="text-muted">@doc.Category @(doc.Subcategory != null ? $"? {doc.Subcategory}" : "")</small>
                                        </div>
                                        <small class="text-muted">@doc.LastModified.ToString("MMM dd")</small>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="bg-light py-5">
    <div class="container text-center">
        <h3 class="mb-4">Ready to Get Started?</h3>
        <p class="text-muted mb-4">
            Begin your learning journey with our 5-minute quick start guide
        </p>
        <a href="/Docs/getting-started/01-quick-start-5-minutes" class="btn btn-primary btn-lg">
            <i class="bi bi-rocket-takeoff me-2"></i>Quick Start Guide
        </a>
    </div>
</section>

@section Scripts {
<style>
.hover-shadow {
    transition: box-shadow 0.3s ease;
}

.hover-shadow:hover {
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
}

.list-group-item-action {
    transition: background-color 0.15s ease-in-out;
}
</style>
}
