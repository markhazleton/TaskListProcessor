@{
    ViewData["Title"] = "Performance";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="bi bi-speedometer2 me-3"></i>
                Performance Analysis
            </h1>
            <p class="lead mb-4">
                Comprehensive performance benchmarks and optimization insights for TaskListProcessor.
            </p>
        </div>
    </div>

    <!-- Performance Overview Cards -->
    <div class="row g-4 mb-5">
        <div class="col-lg-3 col-md-6">
            <div class="card text-center border-primary">
                <div class="card-body">
                    <i class="bi bi-lightning text-primary display-3"></i>
                    <h4 class="mt-3">Ultra Fast</h4>
                    <p class="text-muted">< 200ms</p>
                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar bg-primary" style="width: 35%"></div>
                    </div>
                    <small class="text-muted">35% of tasks</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card text-center border-success">
                <div class="card-body">
                    <i class="bi bi-rocket-takeoff text-success display-3"></i>
                    <h4 class="mt-3">Fast</h4>
                    <p class="text-muted">200-500ms</p>
                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar bg-success" style="width: 40%"></div>
                    </div>
                    <small class="text-muted">40% of tasks</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card text-center border-info">
                <div class="card-body">
                    <i class="bi bi-check-circle text-info display-3"></i>
                    <h4 class="mt-3">Normal</h4>
                    <p class="text-muted">500ms-1s</p>
                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar bg-info" style="width: 20%"></div>
                    </div>
                    <small class="text-muted">20% of tasks</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card text-center border-warning">
                <div class="card-body">
                    <i class="bi bi-hourglass text-warning display-3"></i>
                    <h4 class="mt-3">Slow</h4>
                    <p class="text-muted">> 1s</p>
                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar bg-warning" style="width: 5%"></div>
                    </div>
                    <small class="text-muted">5% of tasks</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Performance Benchmarks -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-graph-up me-2"></i>Performance Benchmarks
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Scenario</th>
                                    <th>Tasks</th>
                                    <th>Concurrency</th>
                                    <th>Avg Time</th>
                                    <th>Throughput</th>
                                    <th>Success Rate</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <i class="bi bi-geo-alt text-primary me-2"></i>
                                        <strong>Small Batch</strong><br>
                                        <small class="text-muted">2 cities, light load</small>
                                    </td>
                                    <td><span class="badge bg-primary">4</span></td>
                                    <td><span class="badge bg-secondary">4</span></td>
                                    <td><span class="font-monospace">847ms</span></td>
                                    <td><span class="text-success">4.7/s</span></td>
                                    <td>
                                        <div class="progress" style="width: 60px; height: 20px;">
                                            <div class="progress-bar bg-success" style="width: 100%">100%</div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <i class="bi bi-building text-info me-2"></i>
                                        <strong>Medium Batch</strong><br>
                                        <small class="text-muted">4 cities, moderate load</small>
                                    </td>
                                    <td><span class="badge bg-info">8</span></td>
                                    <td><span class="badge bg-secondary">8</span></td>
                                    <td><span class="font-monospace">1,205ms</span></td>
                                    <td><span class="text-success">6.6/s</span></td>
                                    <td>
                                        <div class="progress" style="width: 60px; height: 20px;">
                                            <div class="progress-bar bg-success" style="width: 88%">88%</div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <i class="bi bi-globe text-warning me-2"></i>
                                        <strong>Large Batch</strong><br>
                                        <small class="text-muted">8 cities, high load</small>
                                    </td>
                                    <td><span class="badge bg-warning">16</span></td>
                                    <td><span class="badge bg-secondary">10</span></td>
                                    <td><span class="font-monospace">1,847ms</span></td>
                                    <td><span class="text-success">8.7/s</span></td>
                                    <td>
                                        <div class="progress" style="width: 60px; height: 20px;">
                                            <div class="progress-bar bg-warning" style="width: 75%">75%</div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <i class="bi bi-cloud text-danger me-2"></i>
                                        <strong>Stress Test</strong><br>
                                        <small class="text-muted">16 cities, maximum load</small>
                                    </td>
                                    <td><span class="badge bg-danger">32</span></td>
                                    <td><span class="badge bg-secondary">20</span></td>
                                    <td><span class="font-monospace">2,341ms</span></td>
                                    <td><span class="text-success">13.7/s</span></td>
                                    <td>
                                        <div class="progress" style="width: 60px; height: 20px;">
                                            <div class="progress-bar bg-danger" style="width: 65%">65%</div>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="alert alert-info mt-3">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Note:</strong> Benchmarks include simulated network latency (500-3000ms) and random failures (40% failure rate) to simulate real-world conditions.
                    </div>
                </div>
            </div>

            <!-- Performance Chart -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-bar-chart me-2"></i>Throughput vs Concurrency
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="performanceChart" width="400" height="200"></canvas>
                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            Performance scales linearly with concurrency up to optimal point (~10-12 concurrent tasks), 
                            then levels off due to context switching overhead and external service limits.
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Performance Insights -->
        <div class="col-lg-4">
            <!-- Key Metrics -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-trophy me-2"></i>Key Performance Metrics
                    </h6>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-speedometer2 text-primary me-2"></i>
                                <strong>Peak Throughput</strong>
                                <br><small class="text-muted">Maximum tasks/second</small>
                            </div>
                            <span class="badge bg-primary rounded-pill">13.7/s</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-clock text-success me-2"></i>
                                <strong>Best Response Time</strong>
                                <br><small class="text-muted">Fastest task completion</small>
                            </div>
                            <span class="badge bg-success rounded-pill">157ms</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-cpu text-info me-2"></i>
                                <strong>Optimal Concurrency</strong>
                                <br><small class="text-muted">Sweet spot for performance</small>
                            </div>
                            <span class="badge bg-info rounded-pill">10-12</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-check-circle text-warning me-2"></i>
                                <strong>Reliability</strong>
                                <br><small class="text-muted">Average success rate</small>
                            </div>
                            <span class="badge bg-warning rounded-pill">82%</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Optimization Tips -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-lightbulb me-2"></i>Optimization Tips
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-start mb-3">
                        <i class="bi bi-cpu text-primary me-3 mt-1"></i>
                        <div>
                            <h6 class="mb-1">Tune Concurrency</h6>
                            <small class="text-muted">Start with 2x CPU cores, adjust based on I/O vs CPU workload ratio.</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-start mb-3">
                        <i class="bi bi-stopwatch text-success me-3 mt-1"></i>
                        <div>
                            <h6 class="mb-1">Set Appropriate Timeouts</h6>
                            <small class="text-muted">Balance between responsiveness and allowing sufficient time for completion.</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-start mb-3">
                        <i class="bi bi-shield-check text-info me-3 mt-1"></i>
                        <div>
                            <h6 class="mb-1">Use Circuit Breakers</h6>
                            <small class="text-muted">Prevent cascading failures and improve overall system resilience.</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-start">
                        <i class="bi bi-graph-up text-warning me-3 mt-1"></i>
                        <div>
                            <h6 class="mb-1">Monitor Telemetry</h6>
                            <small class="text-muted">Use detailed telemetry data to identify bottlenecks and optimize performance.</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- System Requirements -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-pc-display me-2"></i>System Requirements
                    </h6>
                </div>
                <div class="card-body">
                    <h6 class="text-primary">Minimum Requirements</h6>
                    <ul class="list-unstyled mb-3">
                        <li><i class="bi bi-dot"></i>.NET 9.0 Runtime</li>
                        <li><i class="bi bi-dot"></i>2 CPU Cores</li>
                        <li><i class="bi bi-dot"></i>512 MB RAM</li>
                        <li><i class="bi bi-dot"></i>Network connectivity</li>
                    </ul>

                    <h6 class="text-success">Recommended</h6>
                    <ul class="list-unstyled mb-0">
                        <li><i class="bi bi-dot"></i>.NET 9.0 SDK</li>
                        <li><i class="bi bi-dot"></i>4+ CPU Cores</li>
                        <li><i class="bi bi-dot"></i>2+ GB RAM</li>
                        <li><i class="bi bi-dot"></i>SSD Storage</li>
                        <li><i class="bi bi-dot"></i>High-speed network</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Memory Usage Analysis -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-memory me-2"></i>Memory Usage Analysis
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h6>Memory Consumption by Task Count</h6>
                            <div class="progress mb-2" style="height: 25px;">
                                <div class="progress-bar bg-primary" style="width: 15%" data-bs-toggle="tooltip" title="1-5 tasks: ~15MB">
                                    1-5 tasks
                                </div>
                                <div class="progress-bar bg-info" style="width: 25%" data-bs-toggle="tooltip" title="6-15 tasks: ~25MB">
                                    6-15 tasks
                                </div>
                                <div class="progress-bar bg-warning" style="width: 35%" data-bs-toggle="tooltip" title="16-30 tasks: ~35MB">
                                    16-30 tasks
                                </div>
                                <div class="progress-bar bg-danger" style="width: 25%" data-bs-toggle="tooltip" title="30+ tasks: ~50MB">
                                    30+ tasks
                                </div>
                            </div>
                            <div class="d-flex justify-content-between small text-muted">
                                <span>0MB</span>
                                <span>25MB</span>
                                <span>50MB</span>
                                <span>75MB</span>
                                <span>100MB</span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="alert alert-success">
                                <h6><i class="bi bi-check-circle me-2"></i>Memory Efficient</h6>
                                <p class="mb-0 small">
                                    TaskListProcessor uses object pooling and efficient async patterns to minimize memory allocation and garbage collection pressure.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Create performance chart
            const ctx = document.getElementById('performanceChart').getContext('2d');
            const performanceChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['1', '2', '4', '6', '8', '10', '12', '16', '20', '24'],
                    datasets: [{
                        label: 'Throughput (tasks/sec)',
                        data: [1.2, 2.1, 3.8, 5.2, 6.8, 8.9, 10.2, 11.1, 11.8, 12.1],
                        borderColor: 'rgb(75, 192, 192)',
                        backgroundColor: 'rgba(75, 192, 192, 0.1)',
                        tension: 0.4,
                        fill: true
                    }, {
                        label: 'Success Rate (%)',
                        data: [95, 94, 92, 89, 85, 82, 78, 74, 69, 65],
                        borderColor: 'rgb(255, 99, 132)',
                        backgroundColor: 'rgba(255, 99, 132, 0.1)',
                        tension: 0.4,
                        fill: false,
                        yAxisID: 'y1'
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        title: {
                            display: true,
                            text: 'TaskListProcessor Performance Characteristics'
                        },
                        legend: {
                            position: 'top'
                        }
                    },
                    scales: {
                        x: {
                            display: true,
                            title: {
                                display: true,
                                text: 'Concurrent Tasks'
                            }
                        },
                        y: {
                            type: 'linear',
                            display: true,
                            position: 'left',
                            title: {
                                display: true,
                                text: 'Throughput (tasks/sec)'
                            },
                            min: 0,
                            max: 15
                        },
                        y1: {
                            type: 'linear',
                            display: true,
                            position: 'right',
                            title: {
                                display: true,
                                text: 'Success Rate (%)'
                            },
                            min: 0,
                            max: 100,
                            grid: {
                                drawOnChartArea: false,
                            },
                        }
                    },
                    interaction: {
                        intersect: false,
                        mode: 'index'
                    }
                }
            });
        });
    </script>
}
